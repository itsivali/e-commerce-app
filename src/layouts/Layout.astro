---
import { getSession } from 'auth-astro/client';
const session = await getSession();

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <nav class="bg-white shadow-md">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <a href="/" class="flex items-center">
              <span class="text-xl font-bold text-gray-800">Fashion Store</span>
            </a>
          </div>
          <div class="flex items-center">
            <a href="/cart" class="p-2 text-gray-600 hover:text-gray-900">
              Cart
            </a>
            {session ? (
              <a href="/api/auth/signout" class="ml-4 p-2 text-gray-600 hover:text-gray-900">
                Sign Out
              </a>
            ) : (
              <a href="/api/auth/signin" class="ml-4 p-2 text-gray-600 hover:text-gray-900">
                Sign In
              </a>
            )}
          </div>
        </div>
      </div>
    </nav>
    <main>
      <slot />
    </main>
  </body>
</html>